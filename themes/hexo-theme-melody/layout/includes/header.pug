#page-header
  .shareimg(style={display:'none'})
    img(src="/img/logo.png")
  span.pull-left 
    a#site-name(href=url_for('/')) #[=config.title]
  

  span.pull-right-box
    if (theme.menu)
      span.pull-right.menus    
        each url, label in theme.menu
          if((page.path.indexOf('/') > -1 ? page.path.split('/')[0] : '') == url.split('/')[1])
            a.site-page.page-active(href=url)= label
          else 
            a.site-page(href=url)= label
    span.pull-right
        if (theme.algolia_search.enable || theme.local_search && theme.local_search.enable)
          a.site-page.social-icon.search
            i.fa.fa-search
            span=' '+_p('search')
            
    i.fa.fa-bars.toggle-menu.pull-right(aria-hidden="true")
  
